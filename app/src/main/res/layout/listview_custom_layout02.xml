<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/custom_listview_02_topic"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:paddingTop="23dp"
        android:paddingLeft="10dp"
        android:textSize="19sp"
        android:textColor="#FFF"
        android:text="TOPIC" />

    <TextView
        android:id="@+id/custom_listview_02_info"
        android:layout_width="100dp"
        android:layout_height="73dp"
        android:paddingTop="23dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_toEndOf="@id/custom_listview_02_topic"
        android:layout_toRightOf="@id/custom_listview_02_topic"
        android:text="Sub-Topic" />

    <ImageView
        android:id="@+id/custom_listview_02_image"
        android:layout_width="130dp"
        android:layout_height="73dp"
        android:layout_toEndOf="@id/custom_listview_02_info"
        android:layout_toRightOf="@id/custom_listview_02_info"
        android:src="@drawable/linkedlist2"/>

</RelativeLayout>